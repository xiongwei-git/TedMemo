<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg_color"
    android:clipChildren="false"
    android:clipToPadding="false" >

    <View
        android:id="@id/topSpace"
        android:layout_width="fill_parent"
        android:layout_height="58.0dip" />

    <GridView
        android:id="@id/tabGridViewNormal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topSpace"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="18.0dip"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:columnWidth="75.0dip"
        android:gravity="center"
        android:horizontalSpacing="0.0dip"
        android:numColumns="4"
        android:splitMotionEvents="false"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0.0dip" />

    <GridView
        android:id="@id/tabGridViewEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topSpace"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="18.0dip"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:columnWidth="75.0dip"
        android:gravity="center"
        android:horizontalSpacing="0.0dip"
        android:numColumns="4"
        android:splitMotionEvents="false"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0.0dip"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@id/iconEditButton"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="72.0dip"
        android:layout_marginLeft="38.0dip"
        android:layout_marginRight="38.0dip"
        android:background="@drawable/icon_edit_button_selector"
        android:clickable="true"
        android:visibility="visible" >

        <TextView
            android:id="@id/iconEditButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:text="@string/edit_icon"
            android:textColor="@color/top_icon_edit_button_text_color"
            android:textSize="15.0sp" />
    </FrameLayout>

</RelativeLayout>