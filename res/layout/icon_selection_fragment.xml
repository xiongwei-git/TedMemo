<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="39.0dip"
        android:layout_marginRight="39.0dip"
        android:layout_marginTop="50.0dip"
        android:src="@drawable/icon_selector_logo" />

    <FrameLayout
        android:id="@id/temporarySaveButton"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="38.0dip"
        android:layout_marginRight="38.0dip"
        android:layout_marginTop="17.0dip"
        android:background="@drawable/main_color_button_selector"
        android:clickable="true"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:text="@string/temporary_save"
            android:textColor="@android:color/white"
            android:textSize="17.0sp" />
    </FrameLayout>

    <GridView
        android:id="@id/icon_selection_gridview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_marginTop="16.0dip"
        android:columnWidth="70.0dip"
        android:gravity="center"
        android:visibility="visible"
        android:horizontalSpacing="0.0dip"
        android:numColumns="4"
        android:splitMotionEvents="false"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0.0dip" />

    <LinearLayout
        android:id="@id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16.0dip"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="19.0dip"
            android:layout_height="19.0dip"
            android:layout_gravity="center"
            android:src="@drawable/ison_selector_cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4.0dip"
            android:includeFontPadding="false"
            android:text="@string/icon_selection_cancel"
            android:textColor="@android:color/white"
            android:textSize="23.0sp" />
    </LinearLayout>

</LinearLayout>